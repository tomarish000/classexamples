                                            <polygon fill="green" points='0.86767105974871 0, 2.5 0, 1.6609003688227 1 , 0.028571428571429 1, 0.86767105974871 0'/>
                                    </clipPath>

                                <image clip-path="url(#block2-skew-3-mask)" preserveAspectRatio="xMidYMid slice" height="100%" width="100%" xlink:href="" lazy-src="https://www.lamborghini.com/sites/it-en/files/DAM/lamborghini/model/huracan/huracan-evo-rwd/new/design-right.jpg"/>

