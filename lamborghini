<script type="text/javascript">

    var scripts=['https://s7.addthis.com/js/300/addthis_widget.js#pubid=ra-58130d6e7c1b0811'];

    var loadScripts=function(){
        var el = document.createElement("script");
        el.onload=function(){
            if(scripts.length>0)
            {
                loadScripts();
            }else{
                try{window.addthislistener();}catch(e){}
            }
        };
        el.src=scripts.shift();
        document.getElementsByTagName('head')[0].appendChild(el);
    }

    loadScripts();

</script>

